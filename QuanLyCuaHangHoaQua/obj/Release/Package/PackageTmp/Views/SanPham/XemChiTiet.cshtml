
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/_ProductLayout.cshtml";
}

@using QuanLyCuaHangHoaQua.Models
@model SanPham

<section class="banner-bottom py-lg-5 py-3" >
    <div class="inner-sec-shop pt-lg-4 pt-3">
        <div class="row">
            <div class="col-lg-4 single-right-left "style="margin-top:15%; margin-left:20%">
                <div class="grid images_3_of_2" style="display:flex;flex-direction:row">
                    <div class="flexslider1">

                        <div class="clearfix"></div>
                        <div class="thumb-image" style=" width: 300px; height: 300px ; background-repeat:no-repeat" > <img src="@Url.Content(Model.Anh)" data-imagezoom="true" class="img-fluid" alt=" "></div>
                    </div>
                    <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                        <h3>@Model.Ten</h3>
                        <p>
                            <span class="item_price">@Model.Gia.Value.ToString("#,##") VNĐ</span>
                        </p>
                        <div class="rating1">
                            <ul class="stars">
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                        <div class="description">
                            <h5>@Model.MoTa</h5>
                        </div>

                        <div class="occasion-cart" style="background-color:brown;width:150px;height:50px;display:flex;justify-content:center;align-items:center">
                            <a href="@Url.Action("ThemGioHang", "GioHang", new { @MaSp = Model.ID, @strURL = Request.Url.ToString()})" class="add-cart item_add">ADD TO CART</a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>

                </div>
        
            </div>
            
</section>




